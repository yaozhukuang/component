<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="component_res_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/component_res_colorPrimary</item>
        <item name="colorPrimaryDark">@color/component_res_colorPrimaryDark</item>
        <item name="colorAccent">@color/component_res_colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/component_res_activity_animation_style</item>
    </style>

    <!-- 例如当前在A界面，需要打开B页面-->
    <style name="component_res_activity_animation_style" parent="@android:style/Animation">
        <!-- 打开的activity进入动画，B的进入动画-->
        <item name="android:activityOpenEnterAnimation">@anim/component_res_enter_activity_in</item>
        <!-- 退出的activity退出动画，A的退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/component_res_close_activity_in</item>
        <!-- 打开的activity退出动画，B的退出动画-->
        <item name="android:activityCloseEnterAnimation">@anim/component_res_enter_activity_out</item>
        <!-- 退出的activity进入动画，A的进入动画-->
        <item name="android:activityCloseExitAnimation">@anim/component_res_close_activity_out</item>
    </style>
</resources>